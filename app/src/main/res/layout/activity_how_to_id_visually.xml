            <TextView
                style="@style/textinfo"
                android:layout_marginBottom="10dp"
                android:text="Most egret’s species have very distinctive coloured legs, which is very useful for identification." />

            <LinearLayout
                style="@style/linearlayoutinfo"
                android:background="@color/Brown2">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/zzz_cattleegret" />

                <TextView
                    style="@style/birdpictureinfo"
                    android:text="Western Cattle Egret with yellowish legs" />
            </LinearLayout>

            <LinearLayout
                style="@style/linearlayoutinfo"
                android:background="@color/Brown2">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/zzz_littleegret" />

                <TextView
                    style="@style/birdpictureinfo"
                    android:text="Little Egret with black legs and yellow feet" />
            </LinearLayout>

            <LinearLayout
                style="@style/linearlayoutinfo"
