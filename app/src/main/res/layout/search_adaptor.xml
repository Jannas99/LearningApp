<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lvMainSearch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImageSearch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="image"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/barbet_acaciapied_1l"
            app:shapeAppearance="@style/Circular" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/ivNameSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:textColor="@color/ilala"
                    android:textSize="16sp"
                    tools:text="Bird Name" />

                <TextView
                    android:id="@+id/ivNameScienceSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:textColor="@color/ilala"
                    android:textSize="12sp"
                    tools:text="Bird Name" />


        </LinearLayout>



        <ImageView
            android:id="@+id/ivPlaySearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="image"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/zzz_play"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/ivStopSearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="image"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/zzz_stop"
            android:visibility="gone"/>

</LinearLayout>
